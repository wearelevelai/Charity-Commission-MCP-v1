{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "query": { "type": "string", "minLength": 1 },
    "filters": {
      "type": "object",
      "properties": {
        "organisation": { "type": "string", "const": "charity-commission" },
        "format": { "type": "string" },
        "public_timestamp_from": { "type": "string", "format": "date-time" },
        "public_timestamp_to": { "type": "string", "format": "date-time" }
      },
      "additionalProperties": true
    },
    "page": { "type": "integer", "minimum": 1, "default": 1 },
    "pageSize": { "type": "integer", "minimum": 1, "maximum": 100, "default": 20 }
  },
  "required": ["query"]
}